

<h1 class="text-3xl font-bold mb-4">Carrito de Compras</h1>

{{#if cart.products.length}}
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
          <th>Precio</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        {{#each cart.products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.product.price}}</td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}