<div class="container mx-auto p-4 bg-base-200 rounded-lg shadow-lg mt-10">
    <h1 class="text-4xl font-bold text-center mb-6">Detalle del Ticket</h1>
    <div class="card shadow-lg compact bg-base-100 w-full border border-white p-6">
        <div class="card-body">
            <h2 class="card-title">CÃ³digo del Ticket: {{ticket.code}}</h2>
            <p><strong>Fecha de Compra:</strong> {{ticket.purchase_datetime}}</p>
            <p><strong>Total:</strong> ${{ticket.amount}}</p>
            <p><strong>Comprador:</strong> {{ticket.purchaser}}</p>
            <h3 class="text-2xl font-bold mt-4">Productos Comprados</h3>
            <ul class="list-disc list-inside">
                {{#each ticket.products}}
                    <li>
                        <p><strong>Producto:</strong> {{this.product.title}}</p>
                        <p><strong>Cantidad:</strong> {{this.quantity}}</p>
                        <p><strong>Precio:</strong> ${{this.product.price}}</p>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>