

{{#if carts}}
<h1 class="title">Lista de Carritos</h1>
<div class="carts-container">
  {{#each carts}}
  <div class="cart">
    <h2>Carrito ID: {{this._id}}</h2>
    <ul>
      {{#each this.products}}
      <li>
        <p>Producto ID: {{this.product._id}}</p>
        <p>Cantidad: {{this.quantity}}</p>
      </li>
      {{/each}}
    </ul>
  </div>
  {{/each}}
</div>
{{else}}
<h1>No hay carritos en este momento</h1>
{{/if}}