<div class="w-1/3 mx-auto mt-10">
  <h1 class="title text-3xl font-bold mb-4">Crear Producto</h1>
  <form id="formProduct" class="space-y-4 product-form" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-control">
        <label class="label">
          <span class="label-text">Título</span>
        </label>
        <input type="text" name="title" required class="input input-bordered" aria-label="Título">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Descripción</span>
        </label>
        <input type="text" name="description" required class="input input-bordered" aria-label="Descripción">
      </div>
    </div>
    <div class="form-row">
      <div class="form-control">
        <label class="label">
          <span class="label-text">Código</span>
        </label>
        <input type="text" name="code" required class="input input-bordered" aria-label="Código">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Precio</span>
        </label>
        <input type="number" name="price" required class="input input-bordered" aria-label="Precio">
      </div>
    </div>
    <div class="form-row">
      <div class="form-control">
        <label class="label">
          <span class="label-text">Stock</span>
        </label>
        <input type="number" name="stock" required class="input input-bordered" aria-label="Stock">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Categoría</span>
        </label>
        <input type="text" name="category" required class="input input-bordered" aria-label="Categoría">
      </div>
    </div>
    <div class="form-row">
      <div class="form-control">
        <label class="label">
          <span class="label-text">Estado</span>
        </label>
        <input type="checkbox" name="status" aria-label="Estado">
      </div>
    </div>
    <div class="form-control">
      <label class="label">
        <span class="label-text">Thumbnail</span>
      </label>
      <input type="file" name="thumbnail" multiple required placeholder="Thumbnails" aria-label="Thumbnail">
    </div>
    <div class="form-control mt-6">
      <button type="submit" class="btn btn-primary">Crear Producto</button>
    </div>
  </form>
</div>

{{#if products}}
<h1 class="text-3xl font-bold text-center my-6">Lista de Productos</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 w-2/3">
  {{#each products}}
  <div class="card shadow-lg compact bg-base-100 w-2/3 border border-white">
    <div class="card-body">
      <h2 class="card-title">{{this.title}}</h2>
      <p>{{this._id}}</p>
      <p>{{this.description}}</p>
      <p>Código: {{this.code}}</p>
      <p>Precio: ${{this.price}}</p>
      <p>Status: {{this.status}}</p>
      <p>Stock: {{this.stock}}</p>
      <p>Categoría: {{this.category}}</p>
      <div class="flex flex-wrap gap-2">
        {{#each this.thumbnails}}
          <img src="{{this.path}}" class="w-32 h-32 object-cover rounded-lg">
        {{/each}}
      </div>
      <div class="card-actions justify-end mt-4">
         <div class="card-actions justify-end mt-4">
        <button class="btn btn-error delete-product" data-pid="{{this._id}}">Eliminar</button>
      </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!--paginado-->
<div class="flex justify-center mt-6">
  {{#if hasPrevPage}}
    <a href="http://localhost:8080/products?page={{prevPage}}">
      <button class="btn btn-outline">Anterior</button>
    </a>
  {{/if}}
  <h4 class="mx-4">{{page}}</h4>
  {{#if hasNextPage}}
    <a href="http://localhost:8080/products?page={{nextPage}}">
      <button class="btn btn-outline">Siguiente</button>
    </a>
  {{/if}}
</div>
{{else}}
<h1 class="text-3xl font-bold text-center my-6">No hay lista de productos en este momento</h1>
{{/if}}

<script src="/js/realTimeProducts.js"></script>